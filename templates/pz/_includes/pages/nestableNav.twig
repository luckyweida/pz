{% macro nest(node, depth) %}
    {% from _self import nest as nest %}
    {% set currentPath = app.request.uri %}
    <li class="dd-item dd3-item content-container" data-id="{{ node.id }}">
        <div class="dd-handle dd3-handle"></div>
        <div class="dd-handle dd3-handle"></div>
        <div class="dd3-content">
            <span>{{ node.title }}</span>
            <a href="#" data-content="{{ node.id }}" data-model="" data-status="{{ node.status }}" class="js-status isactive btn btn-xs btn-circle {{ node.status ? 'btn-primary' : 'btn-danger' }} btn-outline">
                <i class="fa {{ node.status ? 'fa-toggle-on' : 'fa-toggle-off' }}"></i>
            </a>
            <a href="/pz/secured/contents/content//{{ node.id }}/edit?returnUrl={{ currentPath|url_encode }}" class="edit btn btn-xs btn-circle btn-primary btn-outline"><i class="fa fa-pencil"></i></a>
            <a href="/pz/secured/contents/content//{{ node.id }}/copy?returnUrl={{ currentPath|url_encode }}" class="copy btn btn-xs btn-circle btn-primary btn-outline"><i class="fa fa-copy"></i></a>
            <a href="#" data-content="{{ node.id }}" data-model="" class="js-delete delete btn btn-xs btn-circle btn-danger"><i class="fa fa-times"></i></a>
        </div>
        {% if node.children|length %}
            <ol class="dd-list">
                {% for itm in node.children %}
                    {{ nest(itm, depth + 1) }}
                {% endfor %}
            </ol>
        {% endif %}
    </li>
{% endmacro %}
