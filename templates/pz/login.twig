{% extends 'pz/layout.twig' %}

{% block extraBodyClass%}gray-bg{% endblock %}

{% block wrapper %}
    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <h1 class="logo-name">PZ+</h1>
        </div>
        <h2><label class="label label-warning-light">the latest technology</label></h2>
        <form class="m-t" action="{{ path('login') }}" method="post" novalidate autocomplete="off">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" required="" name="_username" value="{{ last_username }}">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" required="" name="_password">
            </div>
            <div class="form-group">
                <input type="checkbox" id="id-remember" name="_remember_me" checked />
                <label for="id-remember">Remember me</label>
            </div>
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.message }}
                </div>
            {% endif %}
            <button type="submit" class="btn btn-primary block full-width m-b">Login</button>
        </form>
        <p class="m-t"> <small>Powered by hsh.co.nz &copy; {{ 'now'|date('Y') }}</small> </p>
    </div>
{% endblock %}

