{% extends 'pz/cart/account.html.twig' %}

{% form_theme form 'pz/cart/form.twig' %}

{% block memberContentWraper %}
    <div class="row">
        <div class="col-md-10 ml-auto mr-auto">
            <h3 class="mb-3">Personal Information</h3>
            <form method="post" class="settings-form" novalidate autocomplete="off">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col-md-6 col-sm-6">
                        {{ form_row(form.lastName) }}
                    </div>
                </div>

                {{ form_row(form.description) }}

                {% if submitted == 1 %}
                    <div class="alert alert-success">
                        <div class="container">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <i class="nc-icon nc-simple-remove"></i>
                            </button>
                            <span>Your data has been updated</span>
                        </div>
                    </div>
                {% endif %}

                {{ form_rest(form) }}
                <div class="text-center pt-5">
                    <button type="submit" class="btn btn-wd btn-info btn-round">Save</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}