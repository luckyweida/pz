{% extends 'pz/cart/email/email-base.twig' %}

{% block content %}
    <p>
        Dear {{ customer.firstName }}, <br /><br />

        Thank you for registered with us! Please click the link below to activate your account. If the below link is not clickable, try copying and pasting it into the address bar of your web browser.<br />

        <p style="text-align: center;">
            <a href="{{ app.request.scheme }}://{{ app.request.host }}/activate/{{ customer.uniqid }}">{{ app.request.scheme }}://{{ app.request.host }}/activate/{{ customer.uniqid }}</a>
        </p>
    </p>
{% endblock %}