{% extends 'pz/cart/account.html.twig' %}

{% form_theme form 'pz/cart/form.twig' %}

{% block memberContentWraper %}
    <div class="row bg-white pb-5 pt-2">
        <div class="col-md-10 ml-auto mr-auto">
            <h3 class="mb-3">Change Password</h3>
            <form method="post" class="settings-form" novalidate autocomplete="off">
                <div class="row">
                    {% for passwordField in form.passwordInput %}
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                            {{ form_label(passwordField) }}
                            {{ form_widget(passwordField,{attr:{class:'form-control'}}) }}
                            {{ form_errors(passwordField) }}
                            </div>
                        </div>
                    {% endfor %}
                </div>

                {% if submitted == 1 %}
                    <div class="alert alert-success">
                        <div class="container">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <i class="nc-icon nc-simple-remove"></i>
                            </button>
                            <span>Your data has been updated</span>
                        </div>
                    </div>
                {% endif %}

                {{ form_rest(form) }}
                <div class="text-center pt-5">
                    <button type="submit" class="btn btn-wd btn-info btn-round">Save</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}