{% extends 'base.html.twig' %}

{% block bodyClass %}page-member{% endblock %}

{% block contentWrapper %}
    {% set currentUrl = app.request.pathInfo %}
    <div class="section section-gray" style="padding-top: 100px;">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="card card-refine">
                        <div class="panel-group">
                            <div class="card-header card-collapse {% if 'dashboard' in currentUrl %}bg-danger{% endif %}">
                                <h5 class="mb-0 panel-title">
                                    <a href="/account/dashboard" class="{% if 'dashboard' in currentUrl %}text-white{% endif %}">
                                        Dashboard
                                    </a>
                                </h5>
                            </div>

                            {% if getenv('MEMBER_FAV_ENABLED') == 1 %}
                                <div class="card-header card-collapse {% if 'favourites' in currentUrl %}bg-danger{% endif %}">
                                    <h5 class="mb-0 panel-title">
                                        <a href="/account/favourites" class="{% if 'favourites' in currentUrl %}text-white{% endif %}">
                                            Favourite Products
                                        </a>
                                    </h5>
                                </div>
                            {% endif %}

                            <div class="card-header card-collapse {% if 'order' in currentUrl %}bg-danger{% endif %}">
                                <h5 class="mb-0 panel-title">
                                    <a href="/account/orders" class="{% if 'order' in currentUrl %}text-white{% endif %}">
                                        Previous Orders
                                    </a>
                                </h5>
                            </div>

                            <div class="card-header card-collapse {% if 'address' in currentUrl %}bg-danger{% endif %}">
                                <h5 class="mb-0 panel-title">
                                    <a href="/account/addresses" class="{% if 'address' in currentUrl %}text-white{% endif %}">
                                        Saved Addresses
                                    </a>
                                </h5>
                            </div>

                            <div class="card-header card-collapse {% if 'profile' in currentUrl %}bg-danger{% endif %}">
                                <h5 class="mb-0 panel-title">
                                    <a href="/account/profile" class="{% if 'profile' in currentUrl %}text-white{% endif %}">
                                        Personal Information
                                    </a>
                                </h5>
                            </div>

                            <div class="card-header card-collapse {% if 'password' in currentUrl %}bg-danger{% endif %}">
                                <h5 class="mb-0 panel-title">
                                    <a href="/account/password" class="{% if 'password' in currentUrl %}text-white{% endif %}">
                                        Change Password
                                    </a>
                                </h5>
                            </div>
                        </div>
                    </div>
                    <!-- end card -->
                </div>
                <div class="col-md-9">
                    <div class="pricing-1 section bg-white pt-2">
                        <div class="container">
                            {% block memberContentWraper%}{% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}